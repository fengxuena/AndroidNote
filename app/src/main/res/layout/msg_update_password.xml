        android:hint="原密码" />

    <EditText
        android:id="@+id/input44"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="新密码"
        android:inputType="numberPassword"
        android:layout_marginTop="16dp" />

</LinearLayout>