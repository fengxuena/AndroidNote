<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/hou_color">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="0dp"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/dataview2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/ralat"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    android:textAlignment="viewStart"
                    android:textColor="?attr/tf_black_color"
                    android:textSize="10dp" />

                <RelativeLayout
                    android:id="@+id/ralat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dataview2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:background="@drawable/right_chat"
                    android:gravity="center">

                        <TextView
                            android:id="@+id/contView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewStart"
                            android:textColor="?attr/tf_black_color"
                            android:textSize="16dp" />

                        <ImageView
                            android:id="@+id/imageviewss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center" />


                </RelativeLayout>

                <Space
                    android:id="@+id/kongbai"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_below="@id/ralat"
                    android:layout_alignStart="@+id/ralat"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp" />
        </RelativeLayout>
</RelativeLayout>